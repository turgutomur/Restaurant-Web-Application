<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant Management App</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #ffffff;
            color: #212121;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        .navbar {
            background-color: #4CAF50;
            padding: 15px;
        }
        .navbar-brand {
            font-weight: bold;
            color: white;
            font-size: 24px;
        }
        .navbar-brand:hover {
            color: #E8F5E9;
        }
        .nav-link {
            color: white;
            font-size: 18px;
            margin: 0 10px;
            padding: 10px 15px;
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }
        .nav-link:hover {
            background-color: #66BB6A;
            color: white;
        }
        .navbar-text {
            color: white;
            font-size: 18px;
            margin-right: 10px;
        }
        .container {
            flex: 1;
            margin-top: 20px;
        }
        footer {
            background-color: #4CAF50;
            color: white;
            text-align: center;
            padding: 10px 0;
            margin-top: auto;
        }
        footer p {
            margin: 0;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/">Levantine Anatolian Table</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon" style="filter: invert(1);"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Menu">Menu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Session">Sessions</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    @if (ViewData["Username"] == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Auth/Login">Login</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <span class="navbar-text">Hello, @ViewData["Username"]!</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Auth/Logout">Logout</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year Levantine Anatolian Table. All Rights Reserved.</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
