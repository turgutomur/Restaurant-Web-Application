@model List<Session>

<div class="container mt-5">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="display-5" style="color: #4CAF50;">Sessions</h2>
        <a asp-action="Create" class="btn btn-lg text-white" style="background-color: #4CAF50; border-radius: 8px;">
            Start New Session
        </a>
    </div>

    <!-- Sessions Table -->
    <div class="table-responsive shadow rounded">
        <table class="table table-striped table-hover">
            <thead class="text-white" style="background-color: #4CAF50;">
                <tr>
                    <th scope="col">Customer</th>
                    <th scope="col">Table</th>
                    <th scope="col">Items</th>
                    <th scope="col">Total</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var session in Model)
                {
                    <tr>
                        <td class="align-middle">@session.CustomerName</td>
                        <td class="align-middle">@session.TableNumber</td>
                        <td class="align-middle">
                            <ul class="list-unstyled mb-0">
                                @foreach (var item in session.Items)
                                {
                                    <li>@item.Name</li>
                                }
                            </ul>
                        </td>
                        <td class="align-middle font-weight-bold">@session.TotalPrice.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                        <td class="align-middle text-center">
                            <a asp-action="Edit" asp-route-id="@session.Id" class="btn btn-sm btn-warning text-white">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@session.Id" class="btn btn-sm btn-danger text-white">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
