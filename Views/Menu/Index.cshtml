@model List<RestaurantManagementApp.Models.MenuItem>

<div class="container mt-5">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="display-5" style="color: #4CAF50;">Menu</h2>
        <a asp-action="Create" class="btn btn-lg text-white" style="background-color: #4CAF50; border-radius: 8px;">
            Add New Item
        </a>
    </div>

    <!-- Menu Table -->
    <div class="table-responsive shadow rounded">
        <table class="table table-striped table-hover">
            <thead class="text-white" style="background-color: #4CAF50;">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.Name</td>
                        <td class="align-middle">@item.Price.ToString("C")</td>
                        <td class="align-middle">@item.Category</td>
                        <td class="align-middle text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm text-white" style="background-color: #FFC107;">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm text-white" style="background-color: #F44336;">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
